<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/create_article__close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/baseline_close_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/create_article__close_button" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_article__post_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:text="@string/create_article__post_button"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/buttons_holder"
        app:layout_constraintBottom_toTopOf="@id/create_article__add_content_buttons"
        app:layout_constraintVertical_bias="0">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/create_article__content_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/create_article_default_margin"
            android:layout_marginEnd="@dimen/create_article_default_margin">

            <ImageView
                android:id="@+id/create_article__content_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/create_article__content_description"/>

            <TextView
                android:id="@+id/create_article__title_label"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/create_article__title_label"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="@id/create_article__content_image_view"/>

            <EditText
                android:id="@+id/create_article__article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textStyle="bold"
                android:hint="@string/create_article__enter_title"
                android:scrollHorizontally="true"
                android:singleLine="true"
                app:layout_constraintTop_toBottomOf="@id/create_article__title_label"
                android:background="@null"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:autofillHints="no"/>

            <TextView
                android:id="@+id/create_article__caption_label"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text="@string/create_article__caption_label"
                app:layout_constraintTop_toBottomOf="@id/create_article__article_title"/>

            <EditText
                android:id="@+id/create_article__article_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="@string/create_article__enter_caption"
                app:layout_constraintTop_toBottomOf="@id/create_article__caption_label"
                android:background="@null"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:autofillHints="no"/>

            <TextView
                android:id="@+id/create_article__description_label"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/create_article__article_caption"
                android:text="@string/create_article__description_label"/>

            <EditText
                android:id="@+id/create_article__article_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="@string/create_article__enter_description"
                android:scrollHorizontally="false"
                android:singleLine="false"
                app:layout_constraintTop_toBottomOf="@id/create_article__description_label"
                android:background="@null"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:autofillHints="no"/>

            <TextView
                android:id="@+id/create_article__content_label"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/create_article__article_description"
                android:text="@string/create_article__content_label"/>

            <EditText
                android:id="@+id/create_article__article_content"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="@string/create_article__enter_article_content"
                android:background="@null"
                app:layout_constraintTop_toBottomOf="@id/create_article__content_label"
                android:autofillHints="no"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/create_article__article_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/create_article__add_content_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/create_article_default_margin">
        <ImageButton
            android:id="@+id/create_article__add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/baseline_add_photo_alternate_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="5dp"
            android:contentDescription="@string/create_article__add_photo" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>