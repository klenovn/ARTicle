    <TextView
        android:id="@+id/textView1"
        android:layout_height="wrap_content"
        android:layout_width="314dp"
        android:text="@string/smart_registration"
        android:textSize="22sp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="100dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/textID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="50dp"
        android:text="@string/new_id"
        android:textColor="@color/light_grey"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/textView1"
        app:layout_constraintTop_toBottomOf="@id/textView1"/>

    <GridLayout
        android:id="@+id/inputLayoutEmail"
        android:layout_width="292dp"
        android:layout_height="50dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/input_layout_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textID">

        <ImageView
            android:id="@+id/emailIcon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:padding="15dp"
            android:src="@drawable/email" />

        <EditText
            android:id="@+id/textEmailAddress"
            android:layout_width="228dp"
            android:layout_height="40dp"
            android:ems="20"
            android:layout_margin="5dp"
            android:hint="@string/phone"
            android:inputType="text"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:textColor="@color/light_grey" />
    </GridLayout>

    <TextView
        android:id="@+id/textUSER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="10dp"
        android:text="@string/new_username"
        android:textColor="@color/light_grey"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/textView1"
        app:layout_constraintTop_toBottomOf="@id/inputLayoutEmail"/>

    <GridLayout
        android:id="@+id/inputLayoutUsername"
        android:layout_width="292dp"
        android:layout_height="50dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/input_layout_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textUSER">

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:padding="15dp"
            android:src="@drawable/email" />

        <EditText
            android:id="@+id/textUsername"
            android:layout_width="228dp"
            android:layout_height="40dp"
            android:ems="20"
            android:layout_margin="5dp"
            android:hint="@string/username"
            android:inputType="text"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:textColor="@color/light_grey" />
    </GridLayout>

    <TextView
        android:id="@+id/textPAS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="47dp"
        android:text="@string/new_password"
        android:textColor="@color/light_grey"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/textView1"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutUsername" />

    <GridLayout
        android:id="@+id/inputLayoutPassword"
        android:layout_width="292dp"
        android:layout_height="50dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/input_layout_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPAS">

        <ImageView
            android:id="@+id/passwordIcon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:padding="15dp"

            android:src="@drawable/icon_password" />

        <EditText
            android:id="@+id/textPassword"
            android:layout_width="236dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:ems="20"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/light_grey" />
    </GridLayout>

    <TextView
        android:id="@+id/textRPAS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="47dp"
        android:text="@string/repeated_password"
        android:textColor="@color/light_grey"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/textView1"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutPassword" />

    <GridLayout
        android:id="@+id/inputLayoutRepeatedPassword"
        android:layout_width="292dp"
        android:layout_height="50dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/input_layout_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRPAS">

        <ImageView
            android:id="@+id/repeatedPasswordIcon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:padding="15dp"

            android:src="@drawable/icon_password" />

        <EditText
            android:id="@+id/textRepeatedPassword"
            android:layout_width="236dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:ems="20"
            android:hint="@string/repeat_password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/light_grey" />
    </GridLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn1"
        android:layout_width="292dp"
        android:layout_height="50dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/button_rounded_1"
        android:padding="10dp"
        android:text="@string/reg"
        android:textAllCaps="false"
        android:textColor="@color/pink"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputLayoutRepeatedPassword" />



</androidx.constraintlayout.widget.ConstraintLayout>
